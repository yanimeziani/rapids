{
  "name": "@rapids/installer",
  "version": "2.1.0",
  "description": "RAPIDS - Interactive TUI installer for global Claude Code configuration",
  "type": "module",
  "bin": {
    "rapids-install": "./cli/install.js",
    "rapids-init": "./cli/init.js",
    "rapids-update": "./cli/update.js"
  },
  "scripts": {
    "build": "esbuild cli/install.js cli/init.js cli/update.js --bundle --platform=node --target=node20 --outdir=dist --format=esm --external:ink --external:react --external:ink-* --external:chalk --external:execa --external:fs-extra --external:conf --external:update-notifier --external:ora --external:gradient-string",
    "dev:install": "node --import tsx/esm cli/install.js",
    "dev:init": "node --import tsx/esm cli/init.js",
    "dev:update": "node --import tsx/esm cli/update.js"
  },
  "keywords": [
    "rapids",
    "claude-code",
    "ai",
    "agents",
    "mcp",
    "tui",
    "cli"
  ],
  "author": "Yani Meziani",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "conf": "^13.0.1",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "gradient-string": "^2.0.2",
    "ink": "^5.0.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^4.1.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.1.1",
    "react": "^18.3.1",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
