{
  "name": "RAPIDS Method v1.0",
  "description": "Solo Developer Stack - Flutter + Next.js + FastAPI + PostgreSQL + DocPloy",
  "optimizedFor": {
    "developer": "Solo Developer",
    "projectType": "Full-stack apps (mobile + web + backend)",
    "deployment": "DocPloy self-hosted Docker PaaS"
  },
  "stack": {
    "mobile": {
      "primary": "Flutter",
      "stateManagement": "Riverpod",
      "navigation": "Go Router",
      "auth": "Google Auth (firebase_auth)",
      "patterns": [
        "Feature-based architecture",
        "Repository pattern for API calls",
        "Provider composition with Riverpod"
      ],
      "keyLibraries": [
        "flutter_riverpod",
        "go_router",
        "dio (HTTP client)",
        "hive (local storage)"
      ]
    },
    "web": {
      "primary": "Next.js 15+",
      "framework": "React 18",
      "routing": "App Router",
      "auth": "NextAuth.js with Google provider",
      "useCases": [
        "Landing pages & marketing sites",
        "Admin panels & dashboards",
        "Internal tools"
      ],
      "patterns": [
        "Server Components by default",
        "Client Components for interactivity",
        "API Routes for backend proxy",
        "Standalone build for Docker"
      ]
    },
    "backend": {
      "primary": "FastAPI",
      "language": "Python 3.12+",
      "async": true,
      "database": {
        "primary": "PostgreSQL 16+",
        "orm": "SQLAlchemy 2.0",
        "migrations": "Alembic",
        "driver": "asyncpg"
      },
      "auth": {
        "method": "JWT tokens",
        "provider": "Google OAuth 2.0",
        "library": "python-jose"
      },
      "patterns": [
        "Async/await everywhere",
        "Service layer for business logic",
        "Pydantic v2 for validation",
        "Repository pattern optional"
      ]
    },
    "deployment": {
      "platform": "DocPloy",
      "url": "docploy.meziani.org",
      "type": "Self-hosted Docker PaaS (open-source Heroku)",
      "containerization": "Docker + Docker Compose",
      "features": [
        "Multi-stage builds for optimization",
        "Health checks for monitoring",
        "Auto-restart on failure",
        "Log aggregation",
        "Zero-downtime deployments"
      ],
      "workflow": "Local -> Staging -> Production"
    }
  },
  "developmentEnvironment": {
    "editor": "VSCode with Claude Code extension",
    "ai": "Claude Sonnet 4.5",
    "versionControl": "Git",
    "cicd": "Manual deploy via DocPloy CLI",
    "testing": {
      "mobile": "flutter test",
      "web": "Jest + React Testing Library",
      "backend": "pytest + pytest-asyncio"
    }
  },
  "rapidsConfiguration": {
    "version": "1.0",
    "subAgents": {
      "total": 9,
      "parallelExecution": true,
      "maxConcurrent": 3,
      "autoActivated": ["code-searcher"]
    },
    "slashCommands": {
      "total": 6,
      "list": [
        "/new-feature",
        "/fix-bug",
        "/refactor",
        "/test",
        "/deploy",
        "/update-deps"
      ]
    },
    "templates": {
      "total": 3,
      "list": [
        "mobile-feature.md (Flutter + Riverpod)",
        "backend-api.md (FastAPI + SQLAlchemy)",
        "web-page.md (Next.js App Router)"
      ]
    }
  },
  "projectStructure": {
    "recommended": "Monorepo",
    "layout": {
      "mobile/": "Flutter app",
      "web/": "Next.js app (with Dockerfile)",
      "backend/": "FastAPI app (with Dockerfile)",
      "docs/": "Documentation (PRDs, ADRs)",
      ".claude/": "RAPIDS configuration",
      "scripts/": "Automation scripts",
      "docker-compose.yml": "Local development"
    },
    "dockerRequirements": {
      "web": {
        "file": "web/Dockerfile",
        "type": "Multi-stage build (deps -> builder -> runner)",
        "baseImage": "node:20-alpine",
        "buildOutput": "standalone",
        "required": true,
        "reason": "DocPloy deployment requires containerization"
      },
      "backend": {
        "file": "backend/Dockerfile",
        "type": "Single-stage Python build",
        "baseImage": "python:3.12-slim",
        "healthCheck": true,
        "required": true,
        "reason": "DocPloy deployment requires containerization"
      },
      "mobile": {
        "file": null,
        "required": false,
        "reason": "Flutter mobile apps don't run in Docker"
      }
    }
  },
  "bestPractices": {
    "architecture": "Feature-based folders, not layer-based",
    "testing": "Agent-generated tests after feature completion",
    "deployment": "Always test on staging first",
    "security": "Monthly security-scanner agent runs",
    "performance": "Profile before optimizing with performance-analyzer agent",
    "database": "Use db-architect agent for all schema changes"
  },
  "workflowPatterns": {
    "newFeature": [
      "1. Plan with Claude",
      "2. Launch feature-builder agent (parallel mobile + web + backend)",
      "3. Launch test-generator agent",
      "4. Launch deployment-manager to staging",
      "5. Test manually",
      "6. Deploy to production"
    ],
    "bugFix": [
      "1. Launch bug-hunter agent with error details",
      "2. Verify fix locally",
      "3. Quick deploy if critical"
    ],
    "refactoring": [
      "1. Launch performance-analyzer for metrics",
      "2. Launch refactor-master with strategy",
      "3. Launch test-generator to ensure no breaks",
      "4. Deploy when safe"
    ]
  },
  "productivityGains": {
    "featureDevelopment": "3-5 days → 4-8 hours (85% faster)",
    "bugFixing": "2-4 hours → 15-30 minutes (90% faster)",
    "testWriting": "Manual → Auto-generated (100% coverage)",
    "deployment": "30 minutes → 5 minutes (83% faster)",
    "overallMultiplier": "~10x"
  }
}
